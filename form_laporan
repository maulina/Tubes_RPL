    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try{
            konekDB();
            stat = koneksi.createStatement();
            String sql = "delete from form_keluar;";
            stat.executeUpdate(sql);
            stat.close();
        }
        catch(Exception e){
            javax.swing.JOptionPane.showMessageDialog(null, "Error:"+e.getMessage());
        }
        this.dispose();
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try{
            int i = 0;
            int temp = 0;
            konekDB();
            stat = koneksi.createStatement();
            if(jComboBox1.getSelectedItem().equals("All")){
                String sql = "select Nama, No_plat, Jam_masuk, Jam_keluar, Tanggal, Harga from form_keluar, login where form_keluar.username = login.username;";
                ResultSet rs = stat.executeQuery(sql);
                while(rs.next()){
                    jTable1.setValueAt(rs.getString("Nama"), i, 0);
                    jTable1.setValueAt(rs.getString("No_plat"), i, 1);
                    jTable1.setValueAt(rs.getString("Jam_masuk"), i, 2);
                    jTable1.setValueAt(rs.getString("Jam_keluar"), i, 3);
                    jTable1.setValueAt(rs.getString("Tanggal"), i, 4);
                    jTable1.setValueAt(rs.getString("Harga"), i, 5);
                    temp = temp + Integer.parseInt(rs.getString("Harga"));
                    i++;
                }
                jTextField1.setText(Integer.toString(temp));
                rs.close();
            }
            else{
            String sql = "select Nama, No_plat, Jam_masuk, Jam_keluar, Tanggal, Harga from login, form_keluar where Nama = '"+jComboBox1.getSelectedItem()+"' and login.username = form_keluar.username;";
            ResultSet rs = stat.executeQuery(sql);
            while(rs.next()){
                jTable1.setValueAt(rs.getString("Nama"), i, 0);
                jTable1.setValueAt(rs.getString("No_plat"), i, 1);
                jTable1.setValueAt(rs.getString("Jam_masuk"), i, 2);
                jTable1.setValueAt(rs.getString("Jam_keluar"), i, 3);
                jTable1.setValueAt(rs.getString("Tanggal"), i, 4);
                jTable1.setValueAt(rs.getString("Harga"), i, 5);
                temp = temp + Integer.parseInt(rs.getString("Harga"));
                i++;
            }
            jTextField1.setText(Integer.toString(temp));
            rs.close();
            }
        }
        catch(Exception e){
            
        }
    }                                        

