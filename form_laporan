    public void tgl_skrg(){
        Date now = new Date();
        SimpleDateFormat format = new SimpleDateFormat("yyyy-MM-dd");
        String tglm = format.format(now);
        jLabel2.setText(format.format(now));
    }
    public void today(){
        Date now = new Date();
        SimpleDateFormat format = new SimpleDateFormat("EEEEEE");
        String tglm = format.format(now);
        jLabel3.setText(format.format(now));
    }
    public void clear(){
        int row = jTable1.getRowCount();
        for(int i = 0; i < row; i++){
            jTable1.setValueAt("", i, 0);
            jTable1.setValueAt("", i, 1);
            jTable1.setValueAt("", i, 2);
            jTable1.setValueAt("", i, 3);
            jTable1.setValueAt("", i, 4);
            jTable1.setValueAt("", i, 5);
        }
    }
    public void pegawai(){
        try{
            konekDB();
            stat = koneksi.createStatement();
            String sql = "select Nama from login;";
            ResultSet rs = stat.executeQuery(sql);
            while(rs.next()){
                jComboBox1.addItem(rs.getString("Nama"));
            }
            rs.close();
        }
        catch(Exception e){
            javax.swing.JOptionPane.showMessageDialog(null, "Error:"+e.getMessage());
        }
    }
    public void konekDB(){
        try{
            Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
            koneksi = DriverManager.getConnection("jdbc:mysql://localhost:3306/db_tubes","root","");
            stat = koneksi.createStatement();
        }
        catch(Exception e){
            System.err.println("Error : "+e.getMessage());
        }
    }
