    public void total_price(String masuk, String keluar, String hrg){
        Double price = Double.parseDouble(hrg);
        int cek, temp;
        SimpleDateFormat sdf = new SimpleDateFormat("HH:mm:ss");
        try{
            Date date1 = sdf.parse(masuk);
            Date date2 = sdf.parse(keluar);
            Calendar cal1 = GregorianCalendar.getInstance();
            Calendar cal2 = GregorianCalendar.getInstance();
            cal1.setTime(date1);
            cal2.setTime(date2);
            int h1 = cal1.get(Calendar.HOUR);
            int h2 = cal2.get(Calendar.HOUR);
            int m1 = cal1.get(Calendar.MINUTE);
            int m2 = cal2.get(Calendar.MINUTE);
            temp = h2 - h1;
            cek = m2 - m1;
            if(temp > 0){
                result = temp * price;
                if(cek > 30){
                    result = result + price;
                }
            }
            else{
                result = price;
            }
            jTextField5.setText(Double.toString(result));
        }
        catch(Exception e){
            
        }
    }
    
