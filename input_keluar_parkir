    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        if(jTextField1.getText().equals("")){
            JOptionPane.showMessageDialog(null, "Field kosong!","Peringatan!", JOptionPane.WARNING_MESSAGE);
        }
        else{
            try{
            konekDB();
            ResultSet rs = null;
            String sql = "Select Jam_masuk, Jenis from form_kendaraan where id_tiket = '"+jTextField1.getText()+"';";
            rs = stat.executeQuery(sql);
            if(rs.next()){
                jTextField2.setText(rs.getString("Jam_masuk"));
                if(rs.getString("Jenis").equals("Motor")){
                    jTextField4.setText("2000");
                }
                else{
                    jTextField4.setText("5000");
                }
            }
        }
        catch(Exception e){
            javax.swing.JOptionPane.showMessageDialog(null, "Error:"+e.getMessage());
        }
    }                                        
    }
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        j_masuk = jTextField2.getText();
        j_keluar = jTextField3.getText();
        total_price(j_masuk, j_keluar, jTextField4.getText());
        try{
            konekDB();
            String sql = "insert into form_keluar values('"+jLabel11.getText()+"', '"+jTextField1.getText()+"', '"+jTextField2.getText()+"', '"+jTextField3.getText()+"', '"+jTextField6.getText()+"',  '"+jTextField5.getText()+"');";
            stat.executeUpdate(sql);
            stat.close();
        }
        catch(Exception e){
            javax.swing.JOptionPane.showMessageDialog(null, "Error:"+e.getMessage());
        }
        try{
            konekDB();
            String sql = "delete from form_kendaraan where id_tiket = '"+jTextField1.getText()+"';";
            stat.executeUpdate(sql);
            stat.close();
        }
        catch(Exception e){
            javax.swing.JOptionPane.showMessageDialog(null, "Error:"+e.getMessage());
        }
        jPanel2.setVisible(false);
        jPanel3.setVisible(true);
    }                                        

