    public void konekDB(){
        try{
            Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
            koneksi = DriverManager.getConnection("jdbc:mysql://localhost:3306/db_tubes","root","");
            stat = koneksi.createStatement();
        }
        catch(Exception e){
            System.err.println("Error : "+e.getMessage());
        }
    }
    public void user(){
        try{
            konekDB();
            String sql = "select username from login where status = 'active';";
            ResultSet rs = stat.executeQuery(sql);
            if(rs.next()){
                usr = rs.getString("username");
                jLabel11.setText(usr);
            }
            rs.close();
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null, "Error :"+e.getMessage(), "Communication Error", JOptionPane.WARNING_MESSAGE);
        }
    }
    public void tgl_skrg(){
        Date now = new Date();
        SimpleDateFormat format = new SimpleDateFormat("yyyy-MM-dd");
        String tglm = format.format(now);
        jTextField6.setText(format.format(now));
    }
    public void waktu_skrg(){
        Date now = new Date();
        Format formatter = new SimpleDateFormat("hh:mm:ss");
        String s = formatter.format(now);
        jTextField3.setText(s);
    }
